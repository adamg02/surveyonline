{
  "compilerOptions": {
    "target": "ES2020",
  "module": "CommonJS",
  "moduleResolution": "Node",
    "outDir": "dist",
  "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": { "module": "CommonJS" }
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
{
  "name": "surveyonline-server",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "prebuild": "node -e \"const fs = require('fs'); const path = 'dist'; if (fs.existsSync(path)) fs.rmSync(path, {recursive: true}); console.log('dist folder clean');\"",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/index.js",
    "deploy": "node dist/src/scripts/production-deploy.js",
    "deploy:dev": "npm run setup:db:dev && npm run seed",
    "setup:db": "node dist/src/scripts/setup-db.js",
    "setup:db:dev": "tsx ./src/scripts/setup-db.ts",
    "test": "tsx ./test/basic.test.ts",
    "test:type-check": "tsc --noEmit -p tsconfig.dev.json",
    "seed": "tsx ./src/scripts/seed.ts",
    "seed:prod": "node dist/src/scripts/seed.js"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.30",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "snowflake-sdk": "^1.15.0",
    "typescript": "^5.4.0",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.2"
  }
}
